@model IEnumerable<Entity.ViewModel.OrderViewModel>

<table class="table">
    <thead>
        <tr>
            <th>Order</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Status</th>
            <th>Payment Mode</th>
            <th>Rating</th>
            <th>Total Amount</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate?.ToString("yyyy-MM-dd")</td>
                <td>@order.CustomerName</td>
                <td>@order.OrderStatus</td>
                <td>@order.PaymentMethod</td>
                <td></td>
                <td>@order.TotalAmount</td>
                <td>
                    <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-end align-items-center mt-2">
    <p class="mb-0">Table Per page</p>
    <select class="ms-3 form-select w-auto" aria-label="Default select example" id="pageSizeTable">
        <option value="5" selected="@(ViewBag.PageSize == 5 ? "selected" : "")">5</option>
        <option value="10" selected="@(ViewBag.PageSize == 10 ? "selected" : "")">10</option>
        <option value="15" selected="@(ViewBag.PageSize == 15 ? "selected" : "")">15</option>
    </select>
    <span class="mb-0 ms-2 me-2 d-none d-md-block" id="showing">Showing @(Math.Min(((ViewBag.PageIndex - 1) * ViewBag.PageSize) + 1,
        ViewBag.TotalItems)) -
    @(Math.Min(ViewBag.PageIndex * ViewBag.PageSize, ViewBag.TotalItems)) of @ViewBag.TotalItems</span>

    @if (ViewBag.PageIndex > 1)
    {
        <a href="javascript:void(0)" class="bg-light border-1 bg-light mx-2 px-2 btn btn-outline-dark" onclick="loadOrders(@ViewBag.PageIndex - 1)">
            <i class="fa fa-chevron-left"></i>
        </a>
    }
    else
    {
        <button class="bg-light border-1 bg-light mx-2 px-2 btn btn-outline-dark" hidden>
            <i class="fa fa-chevron-left"></i>
        </button>
    }

    @if (ViewBag.PageIndex < ViewBag.TotalPage)
    {
        <a href="javascript:void(0)" class="bg-light border-1 bg-light mx-2 px-2 btn btn-outline-dark" onclick="loadOrders(@ViewBag.PageIndex + 1)">
            <i class="fa fa-chevron-right"></i>
        </a>
    }
    else
    {
        <button class="bg-light border-1 bg-light mx-2 px-2 btn btn-outline-dark" hidden>
            <i class="fa fa-chevron-right"></i>
        </button>
    }
</div>