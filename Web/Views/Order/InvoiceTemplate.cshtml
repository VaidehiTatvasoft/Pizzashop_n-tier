@model Entity.ViewModel.OrderDetailsViewModel

<div id="invoice-detail">
    <div id="invoice-@Model.InvoiceNumber" class="invoice-container">
        <div class="col-12 bg-white justify-content-center align-items-center">
            <div class="col-12 d-flex justify-content-center align-items-center m-2 mb-4">
                <img src="~/assets/pizzashop_logo.png" alt="PizzaShop Logo" style="height:80px;width:80px;">
                <div>
                    <h2>PIZZASHOP</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-12 d-flex justify-content-center ">
                    <div class="col-md-6 p-2 m-1 justify-content-center">
                        <h5 style="color: #0066A7;">Customer Details</h5>
                        <div class="mt-2 m-1">Name: @Model.CustomerName</div>
                        <div class="m-1">Mob: @Model.CustomerPhone</div>
                    </div>
                    <div class="col-md-6 p-2 m-1">
                        <h5 style="color: #0066A7;">Order Details</h5>
                        <div class="mt-2 m-1">Invoice Number:#@Model.InvoiceNumber</div>
                        <div class="m-1">Date:@Model.OrderDate?.ToString("yyyy-MM-dd")</div>
                        <div class="m-1">Section: @Model.SectionName</div>
                        <div class="m-1">Table: @Model.TableName</div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <div class="col-12 p-2 m-2 justify-content-center">
                        <h5>Order Items</h5>
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="thead" style="background-color: #0066A7;">
                                    <tr>
                                        <th><strong>Sr.No</strong></th>
                                        <th><strong>Item</strong></th>
                                        <th><strong>Quantity</strong></th>
                                        <th><strong>Unit Price</strong></th>
                                        <th><strong>Total</strong></th>
                                    </tr>
                                </thead>
                                <tbody class="table-group-divider" id="orderdetails" style="color: #0066A7;">
                                    @for (int i = 0; i < Model.Items.Count; i++)
                                    {
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>
                                                <div>@Model.Items[i].ItemName</div>
                                                @foreach (var modifier in Model.Items[i].Modifiers)
                                                {
                                                    <div>@modifier.Name</div>
                                                }
                                            </td>
                                            <td>
                                                <div>@Model.Items[i].Quantity</div>
                                                @foreach (var modifier in Model.Items[i].Modifiers)
                                                {
                                                    <div>@modifier.QuantityOfModifier</div>
                                                }
                                            </td>
                                            <td>
                                                <div>@Model.Items[i].Price</div>
                                                @foreach (var modifier in Model.Items[i].Modifiers)
                                                {
                                                    <div>@modifier.ModifiersPrice</div>
                                                }
                                            </td>
                                            <td>
                                                <div>@Model.Items[i].TotalAmount</div>
                                                @foreach (var modifier in Model.Items[i].Modifiers)
                                                {
                                                    <div>@modifier.TotalModifierAmount</div>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div><strong>Subtotal:</strong></div>
                            <div>₹@Model.SubTotal</div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div><strong>CGST:</strong></div>
                            <div>₹@Model.SGST</div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div><strong>GST:</strong></div>
                            <div>₹@Model.GST</div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div><strong>Other:</strong></div>
                            <div>₹@Model.Other</div>
                        </div>
                        <div class="d-flex justify-content-between table-group-divider" style="color: #0066A7;">
                            <div><strong>Total Amount Due:</strong></div>
                            <div>₹@Model.Total</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 d-flex justify-content-center">
                        <div class="col-12 p-2 m-2 justify-content-center">
                            <h5 style="color: #0066A7;">Payment Information</h5>
                            <p>Payment Method: @* @Model.PaymentMethod *@</p>
                        </div>
                    </div>
                    <div class="col-12 p-2 m-2 justify-content-start align-items-center text-center">
                        <h5 style="color: #0066A7;">THANK YOU!</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>