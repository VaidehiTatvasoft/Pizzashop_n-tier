@model Entity.ViewModel.OrderViewModel
<div class="col-11 bg-light justify-content-center align-items-center">

    <div class="col-12 d-flex justify-content-between m-2 mb-4">
        <div>
            <h2>Order-Details</h2>
        </div>
        <div>
            <a asp-controller="Order" asp-action="order" class="btn bg-light cancel-button"
                style="background:transparent;">
                < Back</a>
        </div>
    </div>
    <div class="col-12 m-2 p-2 bg-white rounded shadow-sm justify-content-start align-items-center">
        <div class="d-flex justify-content-between">
            <div>
                <h5>
                    <span>Order Summary 
                        <button class="active-status p-1"style="color:blue; background-color:skyblue;border-radius:0;">
                            <b>@Model.OrderStatus</b>
                        </button>
                    </span>
                </h5>
            </div>
            <div>
                <button type="button" class="btn btn-primary mb-3  mr-2 w-100 col-12">
                    <i class="fa-solid fa-share-from-square me-1"></i>
                    Export
                </button>
            </div>
        </div>
        <p><strong>Invoice No:</strong></p>
        <p><span><strong>Paid On: Placed Date:</strong> @Model.OrderDate?.ToString("yyyy-MM-dd")
                <strong>Modified on:</strong>
                <strong>Order Duration:</strong>
            </span>
        </p>
    </div>
    <div class="row">
        <div class="col-12 d-flex">
            <div class="col-md-6 p-2 m-1 bg-white rounded shadow-sm justify-content-start align-items-center">
                <h5>Customer Details</h5>
                <div class="mt-3 m-1">Name: @Model.CustomerName</div>
                <div class="m-1">Phone:</div>
                <div class="m-1">No of Person:</div>
                <div class="m-1">Email:</div>
            </div>
            <div class="col-md-6 p-2 m-1 bg-white rounded shadow-sm justify-content-start align-items-center">
                <h5>Table Details</h5>
                <div class="mt-3 m-1">Table:</div>
                <div class="m-1">Section:</div>
            </div>
        </div>
    </div>
    <div class="col-12 p-2 m-2 bg-white rounded shadow-sm justify-content-start align-items-center">
        <h5>Order Items</h5>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th><strong>Sr.No</strong></th>
                        <th><strong>Item</strong></th>
                        <th><strong>Quantity</strong></th>
                        <th><strong>Price</strong></th>
                        <th><strong>Total Amount:</strong></th>
                    </tr>
                </thead>
                <tbody class="table-group-divider" id="orderdetails">
                    <tr>
                        <td></td>
                        <td>
                            <div>
                                Item Name
                            </div>
                            <div>
                                Modifiers
                            </div>
                        </td>

                        <td></td>

                        <td>
                            <div>
                                Item Price
                            </div>
                            <div>
                                Modifiers Price
                            </div>
                        </td>
                        <td>
                            <div>
                                Total of item
                            </div>
                            <div>
                                Total of Modifier
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-end align-items-center">
                <div>
                    <div><strong>Subtotal:</strong>₹</div>
                    <div><strong>CGST:</strong>₹</div>
                    <div><strong>SGST:</strong>₹</div>
                    <div><strong>GST:</strong>₹</div>
                    <div><strong>Other:</strong>₹</div>
                    <div><strong>Total:</strong>₹</div>
                </div>
            </div>
        </div>
        @* <p><strong>Total Amount:</strong> @Model.TotalAmount</p> *@
    </div>
    @* <p><strong>Order ID:</strong> @Model.Id</p> *@
</div>
