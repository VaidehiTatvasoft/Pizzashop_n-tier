@{
    Layout = "";
}
@model Entity.ViewModel.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Pizzashop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/AdminDashboard.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="~/pizzashop.styles.css" asp-append-version="true" />
</head>
<body class="main">
    <div class="container-fluid">
        <main>
<div class="d-flex row">
    <div class="left-section col-md-6 col-lg-6 justify-content-center align-items-center ">
        <img src="~/assets/dominos_background.jpg" alt="PizzaShop Background">
    </div>

    <div class="right-section col-md-6 col-lg-6 justify-content-center align-items-center d-flex">
        <div class="brand">
            <img src="~/assets/pizzashop_logo.png" alt="PizzaShop Logo" class="pizza-logo">
            <div class="heading p-1"><b>PIZZASHOP</b></div>
        </div>

         
        <form asp-action="ResetPassword" method="post" class="auth-form col-md-8">
           <h3>Reset Your Password</h3>
           <div class="mb-3 d-flex">
                <input asp-for="Email" type="email" class="form-control" readonly required>
                <input asp-for="NewPassword" type="password" id="new-password" class="form-control ps-4" placeholder="New Password*" required>
                <i class="fa fa-eye eye-icon" onclick="togglePassword('new-password', this)"></i>            </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            <div class="mb-3 d-flex">
                <input asp-for="ConfirmPassword" type="password" id="confirm-password" class="form-control ps-4" placeholder="Confirm New Password*" required>
                <i class="fa fa-eye eye-icon" onclick="togglePassword('confirm-password', this)"></i>
            </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <input type="submit" value="Reset Password" class="btn fill-btn">
            <a asp-controller="Accounts" asp-action="Index" class="d-flex btn back-btn justify-content-center align-items-center">Back to login</a>
        </form>
    </div>
    </div>
    </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
    function togglePassword(inputId, icon) {
        var passwordField = document.getElementById(inputId);
        if (passwordField.type === "password") {
            passwordField.type = "text";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        } else {
            passwordField.type = "password";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        }
    }      
</script>
</body>
</html>

