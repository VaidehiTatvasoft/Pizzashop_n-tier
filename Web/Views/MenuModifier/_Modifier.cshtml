@model List<Entity.ViewModel.MenuModifierViewModel>
@foreach (var modifier in Model)
{
    <tr>
        <td>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
            </div>
        </td>
        <td class="">@modifier.Name</td>
        <td>@modifier.UnitName</td>
        <td>@modifier.Rate</td>
        <td>@modifier.Quantity</td>
        <td>
            <button type="button" class="btn p-0 me-4" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="fa-solid fa-pen"></i>
            </button>
            <button type="button" class="btn p-0" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="fa-regular fa-trash-can"></i>
            </button>
        </td>
    </tr>
}