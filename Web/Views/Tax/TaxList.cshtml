@model IEnumerable<Entity.Data.TaxesAndFee>

@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid" style="padding: 20px !important;">
    <div class="d-flex justify-content-between">
        <h2 style="color: #0066A7;">Taxes/Fees</h2>
        <div class="upper-div d-flex justify-content-end">
            <div class="d-flex">
                <div class="search-box" style="margin-right: 13px;">
                    <input type="text" name="search" id="searchMenuInput" placeholder="Search"
                        style="height: 50px; width: 250px; border: 1px solid #adadad; border-radius: 5%;">
                    <i class="fa-solid fa-magnifying-glass search-btn"></i>
                </div>

                <a href="javascript:void(0);" class="edit-btn add-tax-btn"
                    style="text-decoration: none; color: inherit;">
                    <button data-bs-toggle="modal" data-bs-target="#taxModal" class="add-user-btn"
                        style="border: 1px solid #adadad; border-radius: 5%; background-color:#0066A7; color: white;">
                        <span class="span1">new Tax</span>
                        <span class="span2">+</span>
                    </button>
                </a>
 
                <div class="modal fade" id="taxModal" tabindex="-1" aria-labelledby="taxModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div id="taxList">
        @Html.Partial("_TaxTablePartial", Model)
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Deletion Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-column justify-content-center align-items-center">
                    <img src="@Url.Content("~/images/warning.png")" alt="" style="height: 40px; width: auto;">
                    Are you sure you want to delete this tax?
                </div>
                <div class="d-flex justify-content-center align-items-center" style="gap: 10px; margin-bottom: 20px;">
                    <button type="button" class="btn btn-danger" id="confirmDeleteButton"
                        style="height: 40px; width: 100px; background-color: #0066A7; color: white; border: 1px solid #0066A7;">Yes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
                        style="height: 40px; width: 100px; background-color: white; color: #0066A7; border: 1px solid #0066A7;">No</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            @if (TempData["SuccessMessage"] != null)
                {
                    <text>
                        toastr.success("@TempData["SuccessMessage"]");
                    </text>
            }

                @if (TempData["ErrorMessage"] != null)
                {
                    <text>
                        toastr.error("@TempData["ErrorMessage"]");
                    </text>
            }

                $('#searchMenuInput').on('input', function () {
                    var searchTerm = $(this).val().toLowerCase();
                    $.ajax({
                        type: "GET",
                        url: "/tax/search",
                        data: { query: searchTerm },
                        success: function (data) {
                            $('#taxList').html(data);
                        },
                        error: function (xhr, status, error) {
                            toastr.error("Failed to search taxes.");
                            console.error("Error details:", status, error, xhr.responseText);
                        }
                    });
                });

            $(document).on('click', '.add-tax-btn', function () {
                $.ajax({
                    type: "GET",
                    url: "/tax/taxform",
                    dataType: "html",
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    success: function (data) {
                        $("#taxModal").find('.modal-content').html(data);
                        $('#taxModal').modal('show');
                    },
                    error: function (xhr, status, error) {
                        alert("Failed to load Tax form.");
                        console.error("Error details:", status, error, xhr.responseText);
                    }
                });
            });

            $(document).on('click', '.edit-tax', function () {
                var id = $(this).data('id');
                $.ajax({
                    type: "GET",
                    url: "/tax/taxform?id=" + id,
                    dataType: "html",
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    success: function (data) {
                        $("#taxModal").find('.modal-content').html(data);
                        $('#taxModal').modal('show');
                    },
                    error: function (xhr, status, error) {
                        alert("Failed to load tax details.");
                        console.error("Error: " + error);
                    }
                });
            });

            $(document).on('submit', '#taxForm', function (e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    type: form.attr('method'),
                    url: form.attr('action'),
                    data: form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            toastr.success(response.message);
                            $('#taxModal').modal('hide');
                            location.reload(); 
                        } else {
                            $("#taxModal").find('.modal-content').html(response);
                        }
                    },
                    error: function (xhr, status, error) {
                        $("#taxModal").find('.modal-content').html(xhr.responseText);
                        toastr.error("A Tax with this name already exists");
                    }
                });
            });


            window.confirmDelete = function (taxId) {
                const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
                document.getElementById("confirmDeleteButton").onclick = function () {
                    document.getElementById(`deleteform-${taxId}`).submit();
                };
                modal.show();
            };
        });
    </script>
}
