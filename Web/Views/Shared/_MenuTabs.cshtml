<div class="tab-container bg-white m-1 ml-10 d-flex">
    <div id="tab-items" class="tab active-tab" onclick="location.href='@Url.Action("MenuList", "Menu")'">
        <span class="mx-2"><i class="fa-solid fa-list"></i> Items</span>
    </div>
    <div id="tab-modifiers" class="tab" onclick="location.href='@Url.Action("ModifiersList", "Modifier")'">
        <img src="~/assets/ui-checks-grid.svg" alt="Modifier-icon" />Modifiers
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        function setActiveTab(tabId) {
            var tabs = document.querySelectorAll('.tab');
            tabs.forEach(function(tab) {
                tab.classList.remove('active-tab');
            });

            var activeTab = document.getElementById(tabId);
            if (activeTab) {
                activeTab.classList.add('active-tab');
            }
        }

        var currentUrl = window.location.href;

        if (currentUrl.includes('/Menu/MenuList')) {
            setActiveTab('tab-items');
        } else if (currentUrl.includes('/Modifier/ModifiersList')) {
            setActiveTab('tab-modifiers');
        }
    });
</script>