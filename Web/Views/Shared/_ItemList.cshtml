@using Entity.Data
@model IEnumerable<MenuItem>

<div class="card-body">
    <table class="table table-responsive align-items-center">
        <thead>
            <tr>
                <th style="color:#ADADAD" class="thead"> <input type="checkbox"> NAME</th>
                <th style="color:#ADADAD" class="thead">
                    <div class="d-flex justify-content-center align-items-center">Item Type</div>
                </th>
                <th style="color:#ADADAD" class="thead">
                    <div class="d-flex justify-content-center align-items-center">Rate</div>
                </th>
                <th style="color:#ADADAD" class="thead">
                    <div class="d-flex justify-content-center align-items-center">Quantity</div>
                </th>
                <th style="color:#ADADAD" class="thead">
                    <div class="d-flex justify-content-center align-items-center">Available</div>
                </th>
                <th style="color:#ADADAD" class="thead">
                    <div class="d-flex justify-content-center align-items-center">ACTION</div>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> <input type="checkbox"> <img src="~/assets/dining-menu.png" width="30" height="30"> @item.Name</td>
                    <td>
                        <div class="d-flex justify-content-center align-items-center">
                            @if(item.Type)
                            {
                                <img src="~/assets/veg-icon.svg" width="22" height="22">
                            }
                            else
                            {
                                <img src="~/assets/non-veg-icon.svg" width="22" height="22">
                            }
                        </div>
                    </td>
                    <td>
                        <div class="d-flex justify-content-center align-items-center">@item.Rate</div>
                    </td>
                    <td>
                        <div class="d-flex justify-content-center align-items-center">@item.Quantity</div>
                    </td>
                    <td>
                        <div class="form-check form-switch d-flex justify-content-center align-items-center">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" @(item.IsAvailable ? "checked" : "")>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex justify-content-center align-items-center"><a class="bi bi-pen m-1 p-1" href="edit_user.html"></a><i type="button" class="bi bi-trash m-1 p-1"></i></div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>