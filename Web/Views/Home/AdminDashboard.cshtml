@{
    ViewData["Title"] = "AdminDashboard";
}
@model Entity.Data.Account

<div class="d-flex justify-content-between m-2 p-2">
<h2 class="page-title ">Dashboard</h2>
<div class="month-dropdown ">
        <select id="monthDropdown" onchange="updateMonth()">
            <option value="January">January</option>
            <option value="February">February</option>
            <option value="March">March</option>
            <option value="April">April</option>
            <option value="May">May</option>
            <option value="June">June</option>
            <option value="July">July</option>
            <option value="August">August</option>
            <option value="September">September</option>
            <option value="October">October</option>
            <option value="November">November</option>
            <option value="December">December</option>
        </select>
    </div>
    </div>

<div class="dashboard-container row  high">
    <div class="dashboard-card col-lg-3 col-md-6 col-sm-12 mb-3">
        <div class="icon-container icon-sales">
            <img src="@Url.Content("~/assets/total-sales.svg")" alt="Total Sales">
        </div>
        <h3 class="card-value">$1630</h3>
        <p class="card-title">Total Sales</p>
    </div>
    <div class="dashboard-card col-lg-3 col-md-6 col-sm-12 mb-3">
        <div class="icon-container icon-orders">
            <img src="@Url.Content("~/assets/total-orders.svg")" alt="Total Orders">
        </div>
        <h3 class="card-value">4</h3>
        <p class="card-title">Total Orders</p>
    </div>
    <div class="dashboard-card col-lg-3 col-md-6 col-sm-12 mb-3">
        <div class="icon-container icon-value">
            <img src="@Url.Content("~/assets/order-value.svg")" alt="Avg. Order Value">
        </div>
        <h3 class="card-value">630</h3>
        <p class="card-title">Avg. Order Value</p>
    </div>
    <div class="dashboard-card col-lg-3 col-md-6 col-sm-12 mb-3">
        <div class="icon-container icon-waiting">
            <img src="@Url.Content("~/assets/waiting-time.svg")" alt="Avg. Waiting Time">
        </div>
        <h3 class="card-value">6.96 mins</h3>
        <p class="card-title">Avg. Waiting Time</p>
    </div>
</div>

<div class="dashboard-container row">
    <div class="dashboard-card col-lg-6 col-md-12 mb-3">
        <h4 class="card-heading">Revenue</h4>
        <img src="@Url.Content("~/assets/Graph1.png")" alt="Revenue Graph" class="img-fluid revenue-graph">
    </div>
    <div class="dashboard-card col-lg-6 col-md-12 mb-3">
        <h4 class="card-heading">Customer Growth</h4>
        <img src="@Url.Content("~/assets/graph2.png")" alt="Customer Growth Graph" class="img-fluid customer-growth-graph">
    </div>
</div>

<div class="dashboard-container row ">
    <div class="dashboard-card col-lg-3 col-md-6 col-sm-12 mb-3">
        <h4 class="card-heading">Top Selling Items</h4>
        <table class="item-table">
            <tr>
                <td>#1</td>
                <td><img src="@Url.Content("~/assets/dining-menu.png")" alt="Grilled Burger" class="item-img"></td>
                <td>
                    <p class="item-name">Grilled Burger</p>
                    <span class="order-count"><i class="fa-solid fa-caret-up"></i> 1 Order</span>
                </td>
            </tr>
            <tr>
                <td>#2</td>
                <td><img src="@Url.Content("~/assets/dining-menu.png")" alt="Margherita" class="item-img"></td>
                <td>
                    <p class="item-name">Margherita</p>
                    <span class="order-count"><i class="fa-solid fa-caret-up"></i> 1 Order</span>
                </td>
            </tr>
        </table>
    </div>

    <div class="dashboard-card col-lg-3 col-md-6 col-sm-12 mb-3">
        <h4 class="card-heading">Least Selling Items</h4>
        <table class="item-table">
            <tr>
                <td>#1</td>
                <td><img src="@Url.Content("~/assets/dining-menu.png")" alt="Grilled Burger" class="item-img"></td>
                <td>
                    <p class="item-name">Grilled Burger</p>
                    <span class="order-count"><i class="fa-solid fa-caret-down"></i>1 Order</span>
                </td>
            </tr>
            <tr>
                <td>#2</td>
                <td><img src="@Url.Content("~/assets/dining-menu.png")" alt="Margherita" class="item-img"></td>
                <td>
                    <p class="item-name">Margherita</p>
                    <span class="order-count"><i class="fa-solid fa-caret-down"></i> 1 Order</span>
                </td>
            </tr>
        </table>
    </div>
    <div class="dashboard-card col-lg-3 col-md-6 col-sm-12 mb-3">
        <div class="icon-container icon-waiting-list">
            <img src="@Url.Content("~/assets/waiting-list.svg")" alt="Waiting List Count">
        </div>
        <h3 class="card-value">12</h3>
        <p class="card-title">Waiting List Count</p>
    </div>
    <div class="dashboard-card col-lg-3 col-md-6 col-sm-12 mb-3">
        <div class="icon-container icon-customer">
            <img src="@Url.Content("~/assets/customer.svg")" alt="New Customers">
        </div>
        <h3 class="card-value">5</h3>
        <p class="card-title">New Customers</p>
    </div>
</div>

@section Scripts {
    <script>
        function updateMonth() {
        var dropdown = document.getElementById("monthDropdown");
        var selectedMonth = dropdown.options[dropdown.selectedIndex].value;
        console.log("Selected month: " + selectedMonth);
    }

    window.onload = function() {
        var dropdown = document.getElementById("monthDropdown");
        var currentMonth = new Date().toLocaleString('default', { month: 'long' });
        dropdown.value = currentMonth;
    }
    </script>
}