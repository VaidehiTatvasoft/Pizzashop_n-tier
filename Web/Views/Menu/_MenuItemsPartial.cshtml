@using Entity.Data
@model List<MenuItem>

<div class="container-fluid">
    <div class="upper-div d-flex justify-content-end">
        <div class="d-flex">
            <div class="search-box" style="margin-right: 13px;">
                <input type="text" name="search" id="searchInput" placeholder="Search"
                    style="height: 50px; width: 250px; border: 1px solid #adadad; border-radius: 5%;">
                <i class="fa-solid fa-magnifying-glass search-btn"></i>
            </div>
            <button id="deleteSelectedButton" style="width: 50px; border: 1px solid #adadad; margin-right: 10px;">
                <i class="fa-solid fa-trash" style="cursor: pointer; color: #adadad;"></i>
            </button>

            <a href="javascript:void(0);" class="edit-btn add-item" style="text-decoration: none; color: inherit;">
                <button data-bs-toggle="modal" data-bs-target="#addModal" class="add-user-btn"
                    style="border: 1px solid #adadad; border-radius: 5%; background-color:#0066A7; color: white;">
                    <span class="span1">Add Item</span>
                    <span class="span2">+</span>
                </button>
            </a>
        </div>
    </div>

    <!-- Add Item Modal -->
    <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
            <div class="modal-content">
                <!-- Content will be loaded here via AJAX -->
            </div>
        </div>
    </div>

    <div class="table table-responsive mt-3">
        <table class="table" id="tbl">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" id="selectAllCheckbox" style="accent-color: #0066A7 !important;">
                        Name
                    </th>
                    <th>Item Type</th>
                    <th>Rate</th>
                    <th>Quantity</th>
                    <th>Available</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="d-flex align-items-center" style="gap: 10px;">
                            <input type="checkbox" class="item-checkbox" data-item-id="@item.Id">
                            <img src="@Url.Content("~/assets/dining-menu.png")" style="height: 25px;">
                            @item.Name
                        </td>
                        <td>
                            @if (item.Type == true)
                            {
                                <img src="@Url.Content("~/assets/veg-icon.svg")" alt="Veg" height="20px">
                            }
                            else
                            {
                                <img src="@Url.Content("~/assets/non-veg-icon.svg")" alt="Non-Veg" height="20px">
                            }
                        </td>
                        <td>@item.Rate</td>
                        <td>@item.Quantity</td>
                        <td>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked"
                                    @(item.IsAvailable == true ? "checked" : "")>
                            </div>
                        </td>
                        <td>
                            <a href="javascript:void(0);" class="edit-item" data-id="@item.Id" data-bs-toggle="modal"
                                data-bs-target="#editItemModal"
                                style="text-decoration: none; color: inherit; opacity: 0.7; cursor: pointer; margin-right: 5px;">
                                <i class="bi-pen bi-pen"></i>
                            </a>
                            <a href="javascript:void(0)" onclick="confirmDeleteItem(@item.Id)"
                                style="text-decoration: none; color: inherit;" class="dlt-btn">
                                <i class="bi bi-trash m-1"></i>
                            </a>

                            <form id="deleteitemform-@item.Id" method="post"
                                action="@Url.Action("DeleteItem", "Menu", new { id = @item.Id })"
                                style="display: none;">
                                @Html.AntiForgeryToken()
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="deleteItemModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Deletion Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-column justify-content-center align-items-center">
                    <img src="@Url.Content("~/assets/warning.png")" alt="" style="height: 40px; width: auto;">
                    Are you sure you want to delete these items?
                </div>
                <div class="d-flex justify-content-center align-items-center" style="gap: 10px; margin-bottom: 20px;">
                    <button type="button" class="btn" id="confirmDeleteItemsButton"
                        style="height: 40px; width: 100px; background-color: #006098; color: white;">Yes</button>
                    <button type="button" class="btn" data-bs-dismiss="modal"
                        style="height: 40px; width: 100px; background-color: white; border: 1px solid #006098;">No</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Item Modal -->
    <div class="modal fade" id="editItemModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
            <div class="modal-content">
                <!-- Content will be loaded here via AJAX -->
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Search functionality
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#tbl tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });

        // Select all checkboxes
        $('#selectAllCheckbox').click(function () {
            $('.item-checkbox').prop('checked', this.checked);
        });

        let selectedItems = [];

        $(document).on('change', '.item-checkbox', function () {
            let itemId = $(this).data('item-id');
            if ($(this).is(':checked')) {
                selectedItems.push(itemId);
            } else {
                selectedItems = selectedItems.filter(id => id !== itemId);
            }
        });

        // Mass delete functionality
        $('#deleteSelectedButton').click(function () {
            if (selectedItems.length === 0) {
                alert("Please select at least one item to delete.");
                return;
            }

            const modalElement = document.getElementById('deleteItemModal');
            const modal = new bootstrap.Modal(modalElement);

            document.getElementById("confirmDeleteItemsButton").onclick = function () {
                selectedItems.forEach(function (itemId) {
                    document.getElementById(`deleteitemform-${itemId}`).submit();
                });

                // Hide the modal after form submission
                modal.hide();
            };

            // Show the modal
            modal.show();
        });

        // Load Add Item modal content
        $(document).on('click', '.add-item', function () {
            $.ajax({
                type: "GET",
                url: "/menu/additem",
                dataType: "html",
                success: function (data) {
                    $("#addModal").find('.modal-content').html(data);
                    $('#addModal').modal('show');
                },
                error: function (xhr, status, error) {
                    toastr.error("Failed to load item details.");
                }
            });
        });

        // Load Edit Item modal content
        $(document).on('click', '.edit-item', function () {
            var id = $(this).data('id');
            $.ajax({
                type: "GET",
                url: "/menu/edititem/" + id,
                dataType: "html",
                success: function (data) {
                    $('#editItemModal .modal-content').html(data);
                    $('#editItemModal').modal('show');
                },
                error: function (xhr, status, error) {
                    toastr.error("Failed to load item details.");
                }
            });
        });

        // Clear modal content when hidden
        $('#editItemModal').on('hidden.bs.modal', function () {
            $(this).find('.modal-content').html('');
        });

        $('#addModal').on('hidden.bs.modal', function () {
            $(this).find('.modal-content').html('');
        });

        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                toastr.success("@TempData["SuccessMessage"]");
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                toastr.error("@TempData["ErrorMessage"]");
            </text>
        }
    });

    function confirmDeleteItem(itemId) {
        const modalElement = document.getElementById('deleteItemModal');
        const modal = new bootstrap.Modal(modalElement);

        // Update the ID of the confirm delete button in the function
        document.getElementById("confirmDeleteItemsButton").onclick = function () {
            // Submit the form
            document.getElementById(`deleteitemform-${itemId}`).submit();

            modal.hide();
        };

        // Show the modal
        modal.show();
    }
</script>