@using Entity.Data
@model IEnumerable<MenuCategory>

@{
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center m-3">
    <h4>Menu</h4>
</div>
<div class="mb-4 justify-content-center align-items-center flex-wrap">
    <div class="card">
        @Html.Partial("_MenuTabs")
        <div class="d-flex row">
            <div class="col-auto">
                <nav class="nav flex-column left_bar bg-light">
                    <a class="navbar-brand nav-link p-4 d-flex justify-content-between" style="color:#0066a6">
                        <div><b>Categories</b></div>
                        <div><i type="button" class="bi bi-plus-square" data-toggle="modal" data-target="#addCategoryModal"></i></div>
                    </a>
                    <div class="overflow-auto">
                        @foreach (var category in Model)
                        {
                            <a class="nav-link category-link" href="#" data-category-id="@category.Id">@category.Name</a>
                        }
                    </div>
                </nav>
            </div>
            <div class="col-lg-9 justify-content-center align-items-center">
                <h4>Items</h4>
                <div class="d-flex justify-content-end align-items-center m-3">
                    <div class="p-2">
                        <input class="form-control " type="search" placeholder="Search" aria-label="Search">
                    </div>
                    <div>
                        <button><i class="bi bi-trash m-1" data-toggle="modal" data-target="#deleteModal"></i></button>
                    </div>
                    <div class="p-2">
                        <a href="add_user.html" class="btn btn-primary">+ New Item</a>
                    </div>
                </div>
                <div id="item-list">
                    @await Html.PartialAsync("_ItemList", ViewBag.Items as List<MenuItem>)
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.category-link').on('click', function(e) {
                e.preventDefault();
                var categoryId = $(this).data('category-id');
                $.ajax({
                    url: '@Url.Action("Items", "Menu")',
                    type: 'GET',
                    data: { categoryId: categoryId },
                    success: function(result) {
                        $('#item-list').html($(result).find('#item-list').html());
                    }
                });
            });
        });
    </script>
}