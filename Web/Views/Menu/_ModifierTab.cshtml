<div class="row">
    <div class="col-md-4">
        <div id="modifierGroupList">
            @Html.Partial("_ModifierGroupList")
        </div>
    </div>
    <div class="col-md-8">
        <div id="modifierList">
            @Html.Partial("_ModifierList")
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadModifiers(modifierGroupId) {
            $.ajax({
                url: '@Url.Action("LoadModifiers", "Menu")',
                data: { modifierGroupId: modifierGroupId },
                type: 'GET',
                success: function (data) {
                    $('#modifierList').html(data);
                }
            });
        }
    </script>
}