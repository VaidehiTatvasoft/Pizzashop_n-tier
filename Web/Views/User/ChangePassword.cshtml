@{
    ViewData["Title"] = "ChangePassword";
}
@model Entity.ViewModel.ChangePasswordModel;

<div class="container-fluid row">
    <h1>Change Password</h1>
    <div class="col-md-5">
        <form asp-action="ChangePassword" asp-controller="User" class="mb-5 needs-validation mt-4" id="loginForm"
            novalidate>
            <div class="d-flex mb-3">
                <input asp-for="CurrentPassword" type="password" class="form-control" id="CurrentPassword"
                    aria-describedby="emailHelp" placeholder="Current Password*" required>
                <div class="position-">
                    <i class="fa-solid fa-eye login-icon position-absolute mt-2"></i>
                </div>
            </div>
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            <div class="d-flex mb-3">
                <input asp-for="NewPassword" type="password" class="form-control" id="NewPassword"
                    aria-describedby="emailHelp" placeholder="New Password*" required>
                <div class="position-">
                    <i class="fa-solid fa-eye login-icon position-absolute mt-2"></i>
                </div>
            </div>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
            <div class="d-flex mb-3">
                <input asp-for="ConfirmNewPassword" type="password" class="form-control" id="ConfirmNewPassword"
                    aria-describedby="emailHelp" placeholder="Confirm New Password*" required>
                <div class="position-">
                    <i class="fa-solid fa-eye login-icon position-absolute mt-2"></i>
                </div>
            </div>
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            <div>
                <input type="submit" value="Change Password">
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("active");
        }
    </script>
}
